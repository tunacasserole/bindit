<section id="content">
    <div class="container">
        <% unless flash[:info].blank? %>
        <div class="alert alert-dismissable alert-info">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <h4>Info!</h4>
            <p><%= flash[:info] %></p>
        </div>
        <% end %>
        <% unless flash[:error].blank? %>
        <div class="alert alert-dismissable alert-warning">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <h4>Oops!</h4>
            <p><%= flash[:error] %></p>
        </div>
        <% end %>
        <div class="block-header">
            <h2>New ATM Quote<small>This form allows you to get an indication from ATM's Guardian GL program instantly.</small></h2>
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body p-25">
                        <%= render partial: 'form' %>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <h5>Creating Quotes</h5>
                <p>This form allows you to get an indication from ATM's Guardian GL program instantly./p>
                <h6>Sub-Heading Here</h6>
                <p>This form allows you to get an indication from ATM's Guardian GL program instantly./p>
            </div>
        </div>
    </div>
</section>
