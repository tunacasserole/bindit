<div class="card">
  <div class="card-header m-b-20 bgm-blue">
    <h2>Manage Thrivers <small>Thrivers are past and present patients from your center.</small></h2>
    <a href="<%= new_user_path %>">
        <button class="btn bgm-orange btn-float waves-effect"><i class="zmdi zmdi-plus"></i></button>
    </a>
  </div>
  <div class="table-responsive">
    <table id="users-grid" class="table table-hover">
      <thead>
          <tr>
            <th data-column-id="agencyName">Email</th>
            <th data-column-id="agencyName">Name</th>
            <th data-column-id="agencyName">Phone</th>
          </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td class="f-500 c-cyan"><%= link_to "#{user.email}", edit_user_path(user) %></td>
            <td><%= user.name %></td>
            <td><%= user.phone_number %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

