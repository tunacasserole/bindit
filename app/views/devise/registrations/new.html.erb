<body class="login-content">
  <div class="lc-block toggled" id="l-register">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
      <h3>Sign up</h3>
      <br>
      <%= devise_error_messages! %>
      <div class="input-group m-b-20">
        <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
        <div class="fg-line">
          <%= f.label :name %>
          <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
        </div>
      </div>
      <div class="input-group m-b-20">
        <span class="input-group-addon"><i class="zmdi zmdi-email"></i></span>
        <div class="fg-line">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>
      <div class="input-group m-b-20">
        <span class="input-group-addon"><i class="zmdi zmdi-male"></i></span>
        <div class="fg-line">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>
      <div class="input-group m-b-20">
        <span class="input-group-addon"><i class="zmdi zmdi-male"></i></span>
        <div class="fg-line">
          <%= f.label :password_confirmation, 'Confirmation' %>
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "if you are like Derek and can't figure this out, enter password again." %>
        </div>
      </div>
       <div class="clearfix"></div>
      <%= f.submit 'Sign Up', :class => '  btn-danger', :style => 'float: right' %>
    <% end %>
  </div>
</body>
