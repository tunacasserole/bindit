<p id="notice"><%= notice %></p>

<h1>User Profiles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone number</th>
      <th>Facebook user</th>
      <th>Twitter handle</th>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>City</th>
      <th>State</th>
      <th>Postal code</th>
      <th>Mobile number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_profiles.each do |user_profile| %>
      <tr>
        <td><%= user_profile.user_id %></td>
        <td><%= user_profile.first_name %></td>
        <td><%= user_profile.last_name %></td>
        <td><%= user_profile.phone_number %></td>
        <td><%= user_profile.facebook_user %></td>
        <td><%= user_profile.twitter_handle %></td>
        <td><%= user_profile.address_1 %></td>
        <td><%= user_profile.address_2 %></td>
        <td><%= user_profile.city %></td>
        <td><%= user_profile.state %></td>
        <td><%= user_profile.postal_code %></td>
        <td><%= user_profile.mobile_number %></td>
        <td><%= link_to 'Show', user_profile %></td>
        <td><%= link_to 'Edit', edit_user_profile_path(user_profile) %></td>
        <td><%= link_to 'Destroy', user_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

