<aside id="sidebar" class="sidebar c-overflow">
    <ul class="main-menu">
      <div class="profile-menu">
        <a href="">
            <div class="profile-pic"><img src='/assets/avatars/man1.png'</img></div>
            <div class="profile-info f-500" style="font-size:medium"><%= current_user.name  if current_user %></div>
        </a>
      </div>
      <li><%= link_to("<i class='zmdi zmdi-view-dashboard'></i> Dashboard".html_safe, dashboard_path(current_user)) if current_user %></li>
      <li class="sub-menu" data-menu-id="my_settings">
          <a href=""><i class="zmdi zmdi-settings"></i>Settings</a>
              <ul>
                <% if user_signed_in? %>
