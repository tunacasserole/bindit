                    <li><%= link_to("<i class='zmdi zmdi-power'></i> Sign Out".html_safe, destroy_user_session_path, :method=>'delete') %></li>
                <% else %>
                    <li><%= link_to 'Sign in', new_user_session_path %></li>
                    <li><%= link_to 'Sign up', new_user_registration_path %></li>
                <% end %>
              </ul>
      </li>
      <% if user_signed_in? %>
          <li class="sub-menu" data-menu-id="Quotes">
              <a href=""><i class="zmdi zmdi-shopping-basket"></i>Work with Quotes</a>
              <ul>
                  <li><%= link_to("New Quote", new_quote_path) %></li>
                  <li><%= link_to("Quotes", quotes_path) %></li>
                  <li><%= link_to("ATM Rater", "http://binddesk.atminsurance.com/ListInspections.asp?s=IP") %></li>
              </ul>
          </li>
          <li class="sub-menu" data-menu-id="Accounts">
              <a href=""><i class="zmdi zmdi-accounts"></i>User Management</a>
                <ul>
                    <li><%= link_to("Users", users_path) %></li>
                    <li><%= link_to("Agencies", agencies_path) %></li>
                </ul>
          </li>
      <% end %>
